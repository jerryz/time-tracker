<h1>Customers</h1>

<%= link_to 'New customer', new_customer_path %>

<p>
</p>

<table>
  <tr>
    <th>Business Name</th>
    <th>Active_client</th>
    <th colspan="3"></th>
  </tr>
 
  <% @customers.each do |customer| %>
    <tr>
      <td><%= customer.business_name %></td>
      <td><%= customer.active_cust %></td>
      <td><%= link_to 'Show', customer_path(customer) %></td>
      <td><%= link_to 'Edit', edit_customer_path(customer) %></td>
      <td><%= link_to 'Delete', customer_path(customer), method: :delete, data: { confirm: 'Are you sure you want to delete customer'} %></td>
    </tr>
  <% end %>
</table>
